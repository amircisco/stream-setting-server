# -*- coding: utf-8 -*-

<WindowManager>
    Tizer
        name: "Tizer"
        BoxLayout:
            orientation:"vertical"
            size:self.parent.width,self.parent.height
            VideoPlayerNoCrl
                source:"none.jpg"
                width:self.parent.width
                height:self.parent.height


    CustomSetting
        name:"customsetting"
        BoxLayout:
            size_hint:1,1
            orientation:"vertical"
            BoxLayout:
                size_hint:1,.1
                ActionBar:
                    pos_hint:{'top':1}
                    ActionView:
                        use_seprator:True
                        ActionPrevious:
                            with_previous:False
                            app_icon:''
                        ActionButton:
                            text:app.convert_code_string('copy_past_data')
                            font_name:'Assets/Fonts/BTitrBd.ttf'
                            font_size:16
                            on_press:app.go_to_page('mycomputerview')
                        ActionButton:
                            text:app.convert_code_string('view_camera_setting')
                            font_name:'Assets/Fonts/BTitrBd.ttf'
                            font_size:16
                            on_press:app.go_to_page('viewcamerasetting')
                        ActionButton:
                            text:app.convert_code_string('general_setting')
                            font_name:'Assets/Fonts/BTitrBd.ttf'
                            font_size:16
                            on_press:app.go_to_page('customsetting')
            BoxLayout:
                size_hint:1,.9
                orientation:'horizontal'
                BoxLayout:
                    size_hint:.6,1
                BoxLayout:
                    padding:10
                    orientation:'vertical'
                    size_hint:.4,1
                    GridLayout:
                        spacing:15
                        id:gr_1
                        cols:2
                        opacity:1
                        size_hint:1,.2
                        TextInput:
                            size_hint:.5,1
                            id:txt_sender_ip
                            padding:5
                        Label:
                            size_hint:.5,1
                            font_name:"Assets/Fonts/BTitrBd.ttf"
                            text:app.convert_code_string('sender_ip')
                        Button:
                            font_name:'Assets/Fonts/BTitrBd.ttf'
                            id:btn_update_info
                            size_hint:.5,1
                            text:app.convert_code_string('update')
                            on_press:self.parent.parent.parent.parent.parent.clicked_btn_update_info_before()
                        Label:
                            size_hint:.5,None
                            height:30



                    ScrollView:
                        id:gr_2
                        opacity:0
                        size_hint:1,1
                        GridLayout:
                            size_hint_y: None
                            height:self.minimum_height
                            padding:10
                            spacing:15
                            cols:2
                            TextInput:
                                size_hint:.5,None
                                id:txt_center_ip
                                height:30
                                padding:5
                            Label:
                                size_hint:.5,None
                                height:30
                                text:app.convert_code_string('center_ip')
                                font_name:"Assets/Fonts/BTitrBd.ttf"
                            BoxLayout:
                                orientation:"horizontal"
                                size_hint:.5,None
                                padding:5
                                ToggleButton:
                                    font_name:"Assets/Fonts/BTitrBd.ttf"
                                    id:txt_qu_frame_up
                                    group:'qu'
                                    size_hint:None,None
                                    text:app.convert_code_string('up')
                                    height:30
                                ToggleButton:
                                    font_name:"Assets/Fonts/BTitrBd.ttf"
                                    id:txt_qu_frame_middle
                                    group:'qu'
                                    size_hint:None,None
                                    text:app.convert_code_string('middle')
                                    height:30
                                ToggleButton:
                                    font_name:"Assets/Fonts/BTitrBd.ttf"
                                    id:txt_qu_frame_down
                                    group:'qu'
                                    size_hint:None,None
                                    text:app.convert_code_string('down')
                                    height:30
                            Label:
                                size_hint:.5,None
                                height:30
                                text:app.convert_code_string('quality_frame')
                                font_name:"Assets/Fonts/BTitrBd.ttf"
                            TextInput:
                                size_hint:.5,None
                                id:txt_url_cam1
                                height:30
                                padding:5
                            Label:
                                size_hint:.5,None
                                height:30
                                text:app.convert_code_string('url_cam1')
                                font_name:"Assets/Fonts/BTitrBd.ttf"
                            TextInput:
                                size_hint:.5,None
                                id:txt_url_cam2
                                height:30
                                padding:5
                            Label:
                                size_hint:.5,None
                                height:30
                                text:app.convert_code_string('url_cam2')
                                font_name:"Assets/Fonts/BTitrBd.ttf"
                            TextInput:
                                size_hint:.5,None
                                id:txt_url_cam3
                                height:30
                                padding:5
                            Label:
                                size_hint:.5,None
                                height:30
                                text:app.convert_code_string('url_cam3')
                                font_name:"Assets/Fonts/BTitrBd.ttf"
                            TextInput:
                                size_hint:.5,None
                                id:txt_url_cam4
                                height:30
                                padding:5
                            Label:
                                size_hint:.5,None
                                height:30
                                text:app.convert_code_string('url_cam4')
                                font_name:"Assets/Fonts/BTitrBd.ttf"
                            TextInput:
                                size_hint:.5,None
                                id:txt_soojeh_name
                                height:30
                                padding:5
                            Label:
                                size_hint:.5,None
                                height:30
                                text:app.convert_code_string('soojeh_name_label')
                                font_name:"Assets/Fonts/BTitrBd.ttf"
                            BoxLayout:
                                orientation:"horizontal"
                                size_hint:.5,None
                                padding:5
                                ToggleButton:
                                    font_name:"Assets/Fonts/BTitrBd.ttf"
                                    id:txt_cont_detect_high
                                    group:'cont_detect'
                                    size_hint:None,None
                                    text:app.convert_code_string('high')
                                    height:30
                                ToggleButton:
                                    font_name:"Assets/Fonts/BTitrBd.ttf"
                                    id:txt_cont_detect_middle
                                    group:'cont_detect'
                                    size_hint:None,None
                                    text:app.convert_code_string('middle')
                                    height:30
                                ToggleButton:
                                    font_name:"Assets/Fonts/BTitrBd.ttf"
                                    id:txt_cont_detect_low
                                    group:'cont_detect'
                                    size_hint:None,None
                                    text:app.convert_code_string('low')
                                    height:30
                            Label:
                                size_hint:.5,None
                                height:30
                                text:app.convert_code_string('count_frame_detect')
                                font_name:"Assets/Fonts/BTitrBd.ttf"

                            Switch:
                                size_hint:.5,None
                                height:30
                                id:txt_save_video
                            Label:
                                size_hint:.5,None
                                height:30
                                font_name:"Assets/Fonts/BTitrBd.ttf"
                                text:app.convert_code_string('save_videos')

                            Button:
                                font_name:"Assets/Fonts/BTitrBd.ttf"
                                id:btn_save_info
                                size_hint:.5,None
                                height:30
                                text:app.convert_code_string('sabt')
                                on_press:self.parent.parent.parent.parent.parent.parent.clicked_btn_save_info_before()
                            Label:
                                height:30
                                size_hint:.5,None
                            Label:
                                height:30
                                size_hint:.5,None
                            Label:
                                height:30
                                size_hint:.5,None


                            Button:
                                font_name:"Assets/Fonts/BTitrBd.ttf"
                                size_hint:.5,None
                                height:30
                                text:app.convert_code_string('back')
                                on_press:app.show_go_back()




    ViewCameraSetting
        name:"viewcamerasetting"
        BoxLayout:
            size_hint:1,1
            orientation:"vertical"
            padding:10
            AnchorLayout:
                size_hint:1,.9
                anchor_x:"center"
                anchor_y:"center"
                GridLayout:
                    size_hint_x:None
                    size_hint_y:1
                    width:960
                    cols:2
                    spacing:5
                    padding:5
                    Image:
                        size_hint:None,.5
                        width:480
                        id:img1
                    Image:
                        size_hint:None,.5
                        width:480
                        id:img2
                    Image:
                        size_hint:None,.5
                        width:480
                        id:img3
                    Image:
                        size_hint:None,.5
                        width:480
                        id:img4

            Button:
                size_hint:1,.05
                text:app.convert_code_string('back')
                font_name:"Assets/Fonts/BTitrBd.ttf"
                on_press:app.go_to_page('customsetting')


    MyComputerView
        name:"mycomputerview"
        BoxLayout:
            padding:10
            size_hint:1,1
            orientation:"horizontal"
            BoxLayout:
                size_hint:.8,1
            GridLayout:
                cols:2
                size_hint:.3,1
                Label:
                    id:txt_path
                    size_hint_y:None
                    height:50
                Label:
                    size_hint_y:None
                    height:50
                    text:app.convert_code_string('masir_projeh')
                    font_name:"Assets/Fonts/BTitrBd.ttf"
                Spinner:
                    size_hint_y:None
                    height:50
                    text:'..'
                    id:drive
                Label:
                    size_hint_y:None
                    height:50
                    text:app.convert_code_string('select_drive')
                    font_name:"Assets/Fonts/BTitrBd.ttf"

                Spinner:
                    size_hint_y:None
                    height:50
                    text:'..'
                    values:['copy','cut']
                    id:type_data_transfer
                Label:
                    size_hint_y:None
                    height:50
                    text:app.convert_code_string('select_copy_paste')
                    font_name:"Assets/Fonts/BTitrBd.ttf"

                Spinner:
                    size_hint_y:None
                    height:50
                    text:'..'
                    id:soojeh_name
                Label:
                    size_hint_y:None
                    height:50
                    text:app.convert_code_string('select_soojeh_first')
                    font_name:"Assets/Fonts/BTitrBd.ttf"

                Label:
                    size_hint_y:None
                    height:50
                Label:
                    size_hint_y:None
                    height:50

                Button:
                    size_hint_y:None
                    height:50
                    text:app.convert_code_string('sabt')
                    font_name:"Assets/Fonts/BTitrBd.ttf"
                    on_press:app.bef_copy_paste_data()
                Label:
                    size_hint_y:None
                    height:50
                Label:
                    size_hint_y:None
                    height:50
                Label:
                    size_hint_y:None
                    height:50
                Label:
                    size_hint_y:None
                    height:50
                Label:
                    size_hint_y:None
                    height:50
                Button:
                    size_hint_y:None
                    height:50
                    text:app.convert_code_string('back')
                    on_press:app.go_to_page('customsetting')
                    font_name:"Assets/Fonts/BTitrBd.ttf"


